<%- include('../partials/header') %>
    <div class="container mt-5">
        <h1>Total Bill List </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <% list.forEach(element => { %>
                            <% if (EMAIL===element.userId){ %>
                                <h3>
                                    Total bill is
                                    <%= element.totalbillamount %>. Distributed among:
                                        <%= element.totalFriends %> Friends at
                                            <%= element.purpose %> on
                                                <%= element.createdAt %>
                                                    <br>
                                </h3>
                                <% } %>

                                    <% }) %>




                    </div>
                </div>
            </div>



        </div>
    </div>

    <%- include('../partials/footer') %>