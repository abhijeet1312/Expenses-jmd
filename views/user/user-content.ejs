<%- include('../partials/header') %>
    <a class="btn btn-light btn-dark pdf-hide" href="/download-pdf/<%= EMAIL %>" role="button">Get Your PDF !!!!</a>

    <div class="container mt-5">
        <h1>Total Bill List </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <% list.forEach(element => { %>

                            <h3>
                                Total bill is
                                <%= element.totalbillamount %>. Distributed among:
                                    <%= element.totalFriends %> Friends at
                                        <%= element.purpose %> on
                                            <%= element.createdAt %>
                                                <br>
                            </h3>


                            <% }) %>




                    </div>
                </div>
            </div>



        </div>
    </div>
    <div class="container mt-5">
        <h1>User Individual Expenditure </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <% var sum=0 %>
                            <% list.forEach(element => { %>

                                <h3>
                                    You spent
                                    <%= element.totalAmount %> with
                                        <%= element.totalFriends %> Friends at
                                            <%= element.purpose %> on
                                                <%= element.createdAt %>
                                                    <br>
                                                    <% sum+= element.totalAmount %>
                                </h3>


                                <% }) %>
                                    <br>
                                    <h2>Total expenditure done by you is
                                        <%= sum %>
                                    </h2>





                    </div>
                </div>
            </div>



        </div>
    </div>

    <%- include('../partials/footer') %>