<%- include('../partials/header') %>
    <div class="container mt-5">
        <h1>Total Bill List </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <% var sum=0 %>
                            <% console.log(list[0].userId) %>
                                <% list.forEach(element => { %>
                                    <% if (EMAIL===element.userId){ %>
                                        <h3>
                                            You spent
                                            <%= element.totalAmount %> with
                                                <%= element.totalFriends %> Friends at
                                                    <%= element.purpose %> on
                                                        <%= element.createdAt %>
                                                            <br>
                                                            <% sum+= element.totalAmount %>
                                        </h3>

                                        <% } %>
                                            <% }) %>
                                                <br>
                                                <h2>Total expenditure done by you is
                                                    <%= sum %>
                                                </h2>





                    </div>
                </div>
            </div>



        </div>
    </div>

    <%- include('../partials/footer') %>